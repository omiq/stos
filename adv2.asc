120 if IN$="E" and val(ROOMS$(X+1,Y))>0 then X=X+1
130 if IN$="W" and val(ROOMS$(X-1,Y))>0 then X=X-1
140 if IN$="S" and val(ROOMS$(X,Y+1))>0 then Y=Y+1
150 if IN$="G" then gosub 2000
160 if IN$="U" then gosub 3000
